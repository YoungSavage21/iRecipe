@model iRecipe.Models.Recipe

@{
    ViewData["Title"] = "Delete";
}

<h1>Delete</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            Name:
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.RecipeName)
        </dd>
        
        <dt class = "col-sm-2">
            Category:
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.RecipeCategory)
        </dd>
        <dt class="col-sm-2">
            Cuisine:
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.RecipeArea)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Delete" class="btn btn-outline-danger me-2 px-3 py-1" /> |
        <a asp-action="Index">Back to List</a>
    </form>
</div>
